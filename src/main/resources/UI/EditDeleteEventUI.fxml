        </DatePicker>
        <Label layoutX="100.0" layoutY="200.0" text="Event Time" textFill="GREY">
            <font>
                <Font size="15.0" />
            </font>
        </Label>
        <TextField fx:id="eventTime" layoutX="100.0" layoutY="230.0" prefHeight="26.0" prefWidth="354.0">
            <font>
                <Font size="14.0" />
            </font>
        </TextField>
        <Label layoutX="100.0" layoutY="270.0" text="Event Duration (min)" textFill="GREY">
