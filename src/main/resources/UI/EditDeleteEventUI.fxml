            <font>
                <Font size="14.0" />
            </font>
        </TextField>
        <Label layoutX="100.0" layoutY="410.0" text="Priority" textFill="GREY">
            <font>
                <Font size="15.0" />
            </font>
        </Label>
        <ChoiceBox fx:id="priority" layoutX="100.0" layoutY="440.0" prefHeight="26.0" prefWidth="354.0" value="LOW">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="HIGH" />
                    <String fx:value="MEDIUM" />
                    <String fx:value="LOW" />
                </FXCollections>
            </items>
        </ChoiceBox>
        <Label layoutX="100.0" layoutY="480.0" text="Reminder" textFill="GREY">
            <font>
                <Font size="15.0" />
            </font>
        </Label>
        <ChoiceBox fx:id="reminder" layoutX="100.0" layoutY="510.0" prefHeight="26.0" prefWidth="354.0" value="10 minutes">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="10 minutes" />
                    <String fx:value="1 hour" />
                    <String fx:value="3 days" />
                    <String fx:value="1 week" />
                </FXCollections>
            </items>
        </ChoiceBox>
        <Label layoutX="100.0" layoutY="550.0" text="Participants(separated by ,)" textFill="GREY">
            <font>
                <Font size="15.0" />
            </font>
        </Label>
        <TextField fx:id="participants" layoutX="100.0" layoutY="580.0" prefHeight="26.0" prefWidth="354.0">
            <font>
                <Font size="14.0" />
            </font>
        </TextField>
        <Label layoutX="100.0" layoutY="620.0" text="Attachments" textFill="GREY">
            <font>
                <Font size="15.0" />
            </font>
        </Label>
        <TextField fx:id="attachments" layoutX="100.0" layoutY="650.0" prefHeight="26.0" prefWidth="354.0">
