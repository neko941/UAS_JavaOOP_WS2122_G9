            <font>
                <Font size="16.0" />
            </font>
        </Button>
        <Button fx:id="createButton" layoutX="350.0" layoutY="700.0" onAction="#EditEventOnAction" mnemonicParsing="false" prefHeight="40.0" prefWidth="103.0" style="-fx-background-color: grey; -fx-cursor: hand;" text="Create" textFill="#ffffff">
            <font>
                <Font size="16.0" />
            </font>
        </Button>
